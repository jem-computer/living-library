---
/**
 * Sidebar Navigation Component
 * Renders navigation tree with collapsible folders
 * Highlights current page
 */

interface NavNode {
  name: string;
  path?: string;
  children?: NavNode[];
  isGsdFolder?: boolean;
}

interface Props {
  tree: NavNode[];
  currentPath: string;
}

const { tree, currentPath } = Astro.props;

// Helper to determine if a node or its children contain the current path
function containsCurrentPath(node: NavNode, path: string): boolean {
  if (node.path === path) return true;
  if (node.children) {
    return node.children.some(child => containsCurrentPath(child, path));
  }
  return false;
}

// Group GSD folders
const gsdFolders = ['phases', 'research', 'milestones', 'todos'];
const gsdNodes = tree.filter(node => gsdFolders.includes(node.name.toLowerCase()));
const regularNodes = tree.filter(node => !gsdFolders.includes(node.name.toLowerCase()));
---

<!-- Recursive NavItem component defined inline -->
{/* Note: Using Astro's component recursion pattern */}
<nav class="sidebar" aria-label="Site navigation">
  <ul class="nav-tree">
    {regularNodes.map(node => {
      const isFolder = !!node.children && node.children.length > 0;
      const isCurrent = node.path === currentPath;
      const hasCurrentChild = isFolder && containsCurrentPath(node, currentPath);
      const shouldExpand = hasCurrentChild;

      return isFolder ? (
        <li class="nav-folder" data-folder>
          <button
            class="folder-toggle"
            data-toggle
            aria-expanded={shouldExpand ? 'true' : 'false'}
          >
            <span class="folder-icon">▶</span>
            <span class="folder-name">{node.name}</span>
          </button>
          <ul class="folder-contents" data-contents style={shouldExpand ? '' : 'display: none'}>
            {node.children!.map(child => {
              const childIsFolder = !!child.children && child.children.length > 0;
              const childIsCurrent = child.path === currentPath;
              const childHasCurrentChild = childIsFolder && containsCurrentPath(child, currentPath);
              const childShouldExpand = childHasCurrentChild;

              return childIsFolder ? (
                <li class="nav-folder" data-folder>
                  <button
                    class="folder-toggle"
                    data-toggle
                    aria-expanded={childShouldExpand ? 'true' : 'false'}
                  >
                    <span class="folder-icon">▶</span>
                    <span class="folder-name">{child.name}</span>
                  </button>
                  <ul class="folder-contents" data-contents style={childShouldExpand ? '' : 'display: none'}>
                    {child.children!.map(grandchild => (
                      <li class="nav-item">
                        <a
                          href={grandchild.path}
                          aria-current={grandchild.path === currentPath ? 'page' : undefined}
                          class:list={[{ current: grandchild.path === currentPath }]}
                        >
                          {grandchild.name}
                        </a>
                      </li>
                    ))}
                  </ul>
                </li>
              ) : (
                <li class="nav-item">
                  <a
                    href={child.path}
                    aria-current={childIsCurrent ? 'page' : undefined}
                    class:list={[{ current: childIsCurrent }]}
                  >
                    {child.name}
                  </a>
                </li>
              );
            })}
          </ul>
        </li>
      ) : (
        <li class="nav-item">
          <a
            href={node.path}
            aria-current={isCurrent ? 'page' : undefined}
            class:list={[{ current: isCurrent }]}
          >
            {node.name}
          </a>
        </li>
      );
    })}

    {gsdNodes.length > 0 && (
      <>
        <li class="nav-section-label">
          <span>GSD Structure</span>
        </li>
        {gsdNodes.map(node => {
          const isFolder = !!node.children && node.children.length > 0;
          const isCurrent = node.path === currentPath;
          const hasCurrentChild = isFolder && containsCurrentPath(node, currentPath);
          const shouldExpand = hasCurrentChild;

          return isFolder ? (
            <li class="nav-folder" data-folder>
              <button
                class="folder-toggle"
                data-toggle
                aria-expanded={shouldExpand ? 'true' : 'false'}
              >
                <span class="folder-icon">▶</span>
                <span class="folder-name">{node.name}</span>
              </button>
              <ul class="folder-contents" data-contents style={shouldExpand ? '' : 'display: none'}>
                {node.children!.map(child => {
                  const childIsFolder = !!child.children && child.children.length > 0;
                  const childIsCurrent = child.path === currentPath;
                  const childHasCurrentChild = childIsFolder && containsCurrentPath(child, currentPath);
                  const childShouldExpand = childHasCurrentChild;

                  return childIsFolder ? (
                    <li class="nav-folder" data-folder>
                      <button
                        class="folder-toggle"
                        data-toggle
                        aria-expanded={childShouldExpand ? 'true' : 'false'}
                      >
                        <span class="folder-icon">▶</span>
                        <span class="folder-name">{child.name}</span>
                      </button>
                      <ul class="folder-contents" data-contents style={childShouldExpand ? '' : 'display: none'}>
                        {child.children!.map(grandchild => (
                          <li class="nav-item">
                            <a
                              href={grandchild.path}
                              aria-current={grandchild.path === currentPath ? 'page' : undefined}
                              class:list={[{ current: grandchild.path === currentPath }]}
                            >
                              {grandchild.name}
                            </a>
                          </li>
                        ))}
                      </ul>
                    </li>
                  ) : (
                    <li class="nav-item">
                      <a
                        href={child.path}
                        aria-current={childIsCurrent ? 'page' : undefined}
                        class:list={[{ current: childIsCurrent }]}
                      >
                        {child.name}
                      </a>
                    </li>
                  );
                })}
              </ul>
            </li>
          ) : (
            <li class="nav-item">
              <a
                href={node.path}
                aria-current={isCurrent ? 'page' : undefined}
                class:list={[{ current: isCurrent }]}
              >
                {node.name}
              </a>
            </li>
          );
        })}
      </>
    )}
  </ul>
</nav>

<style>
  .sidebar {
    height: 100%;
    overflow-y: auto;
    padding: var(--spacing-md);
    background-color: var(--bg-primary);
    border-right: 1px solid var(--border-color);
  }

  .nav-tree {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-section-label {
    margin-top: var(--spacing-lg);
    padding: var(--spacing-sm) 0;
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nav-folder {
    list-style: none;
  }

  .folder-toggle {
    display: flex;
    align-items: center;
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-md);
    background: none;
    border: none;
    font-family: inherit;
    font-size: var(--font-size-base);
    color: var(--text-primary);
    cursor: pointer;
    text-align: left;
    transition: background-color var(--transition-fast);
    border-radius: 4px;
  }

  .folder-toggle:hover {
    background-color: var(--bg-hover);
  }

  .folder-toggle:focus {
    outline: 2px solid var(--link-color);
    outline-offset: 2px;
  }

  .folder-toggle:focus:not(:focus-visible) {
    outline: none;
  }

  .folder-icon {
    display: inline-block;
    width: 1rem;
    margin-right: var(--spacing-sm);
    font-size: 0.75rem;
    color: var(--text-secondary);
    transition: transform var(--transition-base);
  }

  .folder-toggle[aria-expanded="true"] .folder-icon {
    transform: rotate(90deg);
  }

  .folder-name {
    font-weight: 500;
  }

  .folder-contents {
    list-style: none;
    padding: 0;
    margin: 0;
    padding-left: 1rem;
    overflow: hidden;
    transition: max-height var(--transition-base), opacity var(--transition-fast);
  }

  .folder-contents[style*="display: none"] {
    max-height: 0;
    opacity: 0;
  }

  .nav-item {
    list-style: none;
  }

  .nav-item a {
    display: block;
    padding: var(--spacing-sm) var(--spacing-md);
    color: var(--text-primary);
    text-decoration: none;
    border-radius: 4px;
    transition: background-color var(--transition-fast), color var(--transition-fast);
  }

  .nav-item a:hover {
    background-color: var(--bg-hover);
  }

  .nav-item a:focus {
    outline: 2px solid var(--link-color);
    outline-offset: 2px;
  }

  .nav-item a:focus:not(:focus-visible) {
    outline: none;
  }

  .nav-item a.current,
  .nav-item a[aria-current="page"] {
    background-color: var(--bg-secondary);
    color: var(--link-color);
    font-weight: 600;
    border-left: 3px solid var(--link-color);
  }
</style>

<script>
  // Folder toggle functionality
  const folders = document.querySelectorAll('[data-folder]');

  folders.forEach(folder => {
    const toggle = folder.querySelector('[data-toggle]');
    const contents = folder.querySelector('[data-contents]');

    if (!toggle || !contents) return;

    toggle.addEventListener('click', () => {
      const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
      const newState = !isExpanded;

      toggle.setAttribute('aria-expanded', String(newState));
      (contents as HTMLElement).style.display = newState ? '' : 'none';
    });

    // Keyboard support: Enter and Space toggle folders
    toggle.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        (toggle as HTMLElement).click();
      }
    });
  });

  // Scroll current page into view after page load
  window.addEventListener('load', () => {
    const currentLink = document.querySelector('.sidebar a[aria-current="page"]');
    if (currentLink) {
      // Expand all parent folders containing current page
      let parent = currentLink.closest('[data-contents]') as HTMLElement | null;
      while (parent) {
        parent.style.display = '';
        const toggle = parent.previousElementSibling;
        if (toggle && toggle.hasAttribute('data-toggle')) {
          toggle.setAttribute('aria-expanded', 'true');
        }
        parent = parent.parentElement?.closest('[data-contents]') as HTMLElement | null;
      }

      // Scroll into view
      currentLink.scrollIntoView({ block: 'center', behavior: 'smooth' });
    }
  });
</script>
