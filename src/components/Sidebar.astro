---
/**
 * Sidebar Navigation Component
 * Renders navigation tree with collapsible folders
 * Highlights current page
 */

interface NavNode {
  name: string;
  path?: string;
  children?: NavNode[];
  isGsdFolder?: boolean;
}

interface Props {
  tree: NavNode[];
  currentPath: string;
}

const { tree, currentPath } = Astro.props;

// Helper to determine if a node or its children contain the current path
function containsCurrentPath(node: NavNode, path: string): boolean {
  if (node.path === path) return true;
  if (node.children) {
    return node.children.some(child => containsCurrentPath(child, path));
  }
  return false;
}

// Recursive function to render tree nodes
function renderNode(node: NavNode, depth = 0): any {
  const isFolder = !!node.children && node.children.length > 0;
  const isCurrent = node.path === currentPath;
  const hasCurrentChild = isFolder && containsCurrentPath(node, currentPath);
  const shouldExpand = hasCurrentChild;

  if (isFolder) {
    return (
      <li class="nav-folder" data-folder>
        <button
          class="folder-toggle"
          data-toggle
          aria-expanded={shouldExpand ? 'true' : 'false'}
          style={`padding-left: ${depth * 0.75}rem`}
        >
          <span class="folder-icon" data-icon>{shouldExpand ? '▼' : '▶'}</span>
          <span class="folder-name">{node.name}</span>
        </button>
        <ul class="folder-contents" data-contents style={shouldExpand ? '' : 'display: none'}>
          {node.children!.map(child => renderNode(child, depth + 1))}
        </ul>
      </li>
    );
  } else {
    return (
      <li class="nav-item">
        <a
          href={node.path}
          aria-current={isCurrent ? 'page' : undefined}
          class={isCurrent ? 'current' : ''}
          style={`padding-left: ${depth * 0.75 + 0.5}rem`}
        >
          {node.name}
        </a>
      </li>
    );
  }
}

// Group GSD folders
const gsdFolders = ['phases', 'research', 'milestones', 'todos'];
const gsdNodes = tree.filter(node => gsdFolders.includes(node.name.toLowerCase()));
const regularNodes = tree.filter(node => !gsdFolders.includes(node.name.toLowerCase()));
---

<nav class="sidebar" aria-label="Site navigation">
  <ul class="nav-tree">
    {regularNodes.map(node => renderNode(node))}

    {gsdNodes.length > 0 && (
      <>
        <li class="nav-section-label">
          <span>GSD Structure</span>
        </li>
        {gsdNodes.map(node => renderNode(node))}
      </>
    )}
  </ul>
</nav>

<style>
  .sidebar {
    height: 100%;
    overflow-y: auto;
    padding: var(--spacing-md);
    background-color: var(--bg-primary);
    border-right: 1px solid var(--border-color);
  }

  .nav-tree {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-section-label {
    margin-top: var(--spacing-lg);
    padding: var(--spacing-sm) 0;
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nav-folder {
    list-style: none;
  }

  .folder-toggle {
    display: flex;
    align-items: center;
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-md);
    background: none;
    border: none;
    font-family: inherit;
    font-size: var(--font-size-base);
    color: var(--text-primary);
    cursor: pointer;
    text-align: left;
    transition: background-color var(--transition-fast);
    border-radius: 4px;
  }

  .folder-toggle:hover {
    background-color: var(--bg-hover);
  }

  .folder-icon {
    display: inline-block;
    width: 1rem;
    margin-right: var(--spacing-sm);
    font-size: 0.75rem;
    color: var(--text-secondary);
  }

  .folder-name {
    font-weight: 500;
  }

  .folder-contents {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-item {
    list-style: none;
  }

  .nav-item a {
    display: block;
    padding: var(--spacing-sm) var(--spacing-md);
    color: var(--text-primary);
    text-decoration: none;
    border-radius: 4px;
    transition: background-color var(--transition-fast), color var(--transition-fast);
  }

  .nav-item a:hover {
    background-color: var(--bg-hover);
  }

  .nav-item a.current,
  .nav-item a[aria-current="page"] {
    background-color: var(--bg-secondary);
    color: var(--link-color);
    font-weight: 500;
  }
</style>

<script>
  // Folder toggle functionality
  const folders = document.querySelectorAll('[data-folder]');

  folders.forEach(folder => {
    const toggle = folder.querySelector('[data-toggle]');
    const contents = folder.querySelector('[data-contents]');
    const icon = folder.querySelector('[data-icon]');

    if (!toggle || !contents || !icon) return;

    toggle.addEventListener('click', () => {
      const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
      const newState = !isExpanded;

      toggle.setAttribute('aria-expanded', String(newState));
      contents.style.display = newState ? '' : 'none';
      icon.textContent = newState ? '▼' : '▶';
    });
  });

  // Scroll current page into view
  const currentLink = document.querySelector('.sidebar a[aria-current="page"]');
  if (currentLink) {
    currentLink.scrollIntoView({ block: 'nearest', behavior: 'smooth' });
  }
</script>
